  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "mobile:sync": "npm run build && npx cap copy android && npx cap sync android && npm run mobile:sync:icon && node scripts/sync-version-to-mobile.cjs",
    "mobile:sync:icon": "npx @capacitor/assets generate --assetPath ./public/mobile --iconBackgroundColor \"#1E1E1E\"",
    "mobile:open:android": "npx cap open android",
    "mobile:debug:android": "npm run mobile:sync && cd ./android && gradlew clean assembleDebug && echo \"âœ… APK build -> ./frontend/android/app/outputs/apk/debug\""
  },

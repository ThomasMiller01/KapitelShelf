{
  "scripts": {
    "build:dev": "npm i && npm run build:dev:frontend && npm run build:dev:backend && npm run gen:swagger",
    "build:dev:frontend": "cd ./frontend/src && npm i",
    "build:dev:backend": "cd ./backend/src && dotnet build",
    "build:docker:frontend": "cd ./frontend && pwsh ./build.ps1",
    "build:docker:backend:api": "cd ./backend/src/KapitelShelf.Api && pwsh ./build.ps1",
    "build:docker:backend:migrations": "cd ./backend/src/KapitelShelf.Data.Migrations && pwsh ./build.ps1",
    "build:helm": "cd ./helm && helm package ./kapitelshelf && helm repo index . --url https://thomasmiller01.github.io/kapitelshelf/helm",
    "dev:docker-compose": "cd ./development && docker-compose up",
    "dev:frontend": "cd ./frontend && npm run dev",
    "dev:backend:api": "cd ./backend/src && dotnet watch run --project KapitelShelf.Api",
    "dev:backend:migrations": "cd ./backend/src && dotnet run --project KapitelShelf.Data.Migrations",
    "gen:swagger": "npm run gen:swaggerjson && npm run gen:swaggerclient",
    "gen:swaggerjson": "cd ./backend/src/KapitelShelf.Api && dotnet build && swagger tofile --output ./swagger.json ./bin/Debug/net9.0/KapitelShelf.Api.dll v1",
    "gen:swaggerclient": "npx @openapitools/openapi-generator-cli generate -i ./backend/src/KapitelShelf.Api/swagger.json -g typescript-axios -o ./frontend/src/lib/api/KapitelShelf.Api --additional-properties=supportsES6=true,typescriptThreePlus=true",
    "gen:helm:docs": "docker run --rm -v %cd%/helm:/helm-docs -v %cd%/docs/helm:/templates jnorwood/helm-docs:v1.14.2 --template-files=/templates/README.md.gotmpl",
    "release:helm": "cd ./helm/kapitelshelf && npx commit-and-tag-version -a",
    "release:frontend": "cd ./frontend && npx commit-and-tag-version",
    "release:backend:api": "cd ./backend/src/KapitelShelf.Api && npx commit-and-tag-version",
    "release:backend:migrations": "cd ./backend/src/KapitelShelf.Data.Migrations && npx commit-and-tag-version"
  },
  "devDependencies": {
    "commit-and-tag-version": "^12.5.1",
    "conventional-changelog-cli": "^5.0.0"
  }
}
